<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80000000"
    android:orientation="horizontal" >
    
    <ImageButton
        android:id="@+id/atomPay_removePay1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:background="#00000000"
        android:scaleType="fitCenter" />
    
	    <TextView
	        android:id="@+id/atomPay_name1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@id/atomPay_removePay1"
	        android:gravity="center_vertical"
	        android:textColor="#f0f0f0"
	        android:lines="1"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/channel_epg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/atomPay_name1"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@id/atomPay_removePay1"
	        android:gravity="center_vertical"
	        android:lines="1"
	        android:textColor="#b0b0b0"
	        android:textSize="20sp" />

	    <ProgressBar
	        android:id="@+id/progressBar1"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/channel_epg"
	        android:layout_toRightOf="@id/atomPay_removePay1"/>
	    
</RelativeLayout>
